{
    "sourceRoot": "./sources/",
    "destinationRoot": "./www/",
    "tasks": {
        "concatjs": {
            "source": ["scripts/**/*.js"],
            "watch": ["scripts/**/*.js"],
            "filename": "game.js",
            "destination": "scripts"
        },
        "eslint": {
            "source": ["../www/scripts/game.js"],
            "config": {
                "globals": []
            }
        },
        "views": {
            "source": ["views/**/*.html"],
            "destination": "",
            "minifyHTML": true
        },
        "images": {
            "source": ["images/**/*"],
            "destination": "images",
            "minify": true
        }

    }
}